<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rvMainActivity"
    android:layout_width="@dimen/main_activity_view_holder"
    android:layout_height="@dimen/main_activity_view_holder"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/margin_medium"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/corner_radius"
        android:elevation="@dimen/elevation"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginBottom="0px">

        <ImageView
            android:id="@+id/ivTopic"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:foregroundGravity="center"
            tools:srcCompat="@tools:sample/avatars" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_margin="@dimen/margin_low"
        android:layout_marginTop="0px"
        android:id="@+id/tvTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0"
        android:text="TextView"
        android:textSize="@dimen/headline_regular"
         />
</LinearLayout>